@model UsuariosListadoViewModel
@{
    ViewData["Title"] = "Listado de usuarios";
    Layout = "../Shared/_Layout.cshtml";
}

@if(Model.Mensaje is not null)
{
    <div class="alert alert-success" role="alert">
        @Model.Mensaje
    </div>
}

@if(Model.Usuarios is not null){
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Acci√≥n</td>
                    <td>Email</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>
                            <button class="btn btn-primary me-2" asp-action="HacerAdmin" asp-route-email="@usuario.Email">Hacer Admin</button>
                            <button class="btn btn-secondary me-2" asp-action="RemoverAdmin" asp-route-email="@usuario.Email">Hacer Admin</button>
                        </td>
                        <td>@usuario.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
}