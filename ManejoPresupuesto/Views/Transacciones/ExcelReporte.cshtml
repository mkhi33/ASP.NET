@{
    ViewData["Title"] = "Reporte Excel";
    var hoy = DateTime.Now;
    var haceUnMes = hoy.AddMonths(-1);
    var mesActual = hoy.Month;
    var añoActual = hoy.Year;
    var mesAnterior = haceUnMes.Month;
    var añoAnterior = haceUnMes.Year;
}
<partial name="_SubMenu" Model="SubMenuTransacciones.ExcelReporte" />
<h1>Exportar transacciones a Excel</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-action="ExportarExcelPorMes" asp-route-mes="@mesActual" asp-route-año="@añoActual">Exportar mes actual</a> ~ @hoy.ToString("MMMM yyyy")
</div>
<div class="mb-3">
    <a class="btn btn-success" asp-action="ExportarExcelPorMes" asp-route-mes="@mesAnterior" asp-route-año="@añoAnterior">Exportar mes anterior</a> ~ @haceUnMes.ToString("MMMM yyyy")
</div>
<div class="mb-3">
    <a class="btn btn-success" asp-action="ExportarExcelPorMes" asp-route-mes="@mesActual" asp-route-año="@añoActual">Exportar año actual</a> ~ @haceUnMes.ToString("MMMM yyyy")
</div>
<div class="mb-3">
    <a class="btn btn-success" asp-action="ExportarExcelPorMes" asp-route-mes="@mesActual" asp-route-año="@añoActual">Exportar año anterior</a> ~ @hoy.ToString("MMMM yyyy")
</div>
<div class="mb-3">
    <a class="btn btn-success" asp-action="ExportarExcelPorMes" asp-route-mes="@mesActual" asp-route-año="@añoActual">Exportar todo</a> 
</div>
