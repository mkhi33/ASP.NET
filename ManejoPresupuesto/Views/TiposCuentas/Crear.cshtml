@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear Tipo de cuenta</h1>
<h5>El tipo de cuenta se refiere a cómo podemos agrupar cuentas. Ejemplos: Préstamos, tarjetas de crédito, etc.</h5>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Crear" asp-controller="TiposCuentas">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" type="text" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>